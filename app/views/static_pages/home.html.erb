<div class="w-full max-w-screen-2xl mx-auto px-7 md:px-24">
  <div class="h-screen flex flex-col justify-center items-center">
    <div class="w-full text-center mt-0 md:mt-10">
      <span class="text-sm font-medium text-gray-100 uppercase">3D-Print</span>
      <h1 class="w-[300px] mx-auto text-dark-blue text-3xl md:text-heading-1">Print your ideas</h1>
    </div>
    <div class="w-full lg:w-4/5 mx-auto md:pr-12">
      <%= image_tag("home_img/3d_print.png") %>
    </div>
  </div>
  <div class="relative flex flex-col justify-center items-center">
    <h4 class="absolute bottom-12 text-center text-base md:text-lg text-gray-300 uppercase font-medium py-2 bg-light-grey z-20">
      Scroll down
    </h4>
    <div class="absolute w-[12px] bottom-4">
      <%= image_tag("home_img/arrow.png") %>
    </div>
  </div>
  <div class="w-full lg:w-2/4 mt-[72px] mb-[72px] md:mb-[136px] mx-auto text-gray-100 text-center">
