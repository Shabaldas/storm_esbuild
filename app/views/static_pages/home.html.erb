<div class="w-full h-screen max-w-screen-2xl mx-auto px-7 md:px-24"></div>

<div class="w-full bg-dark-blue text-light-grey">
  <div class="max-w-screen-2xl mx-auto px-7 xl:px-24">
    <div class="flex flex-col-reverse md:flex-row justify-around items-center lg:items-start">
      <div class="w-[45%] max-h-[420px] hidden md:block -translate-y-8 xl:-translate-y-28">
        <%= image_tag("home_img/mobile.png") %>
      </div>
      <div class="w-full md:w-[45%] text-center md:text-left py-8 lg:pt-[103px] text-zinc-200">
        <h2 class="text-3xl lg:text-5xl pb-5">Do you have any questions?</h2>
        <p class="w-full lg:w-[60%] leading-[26px]">
          Please, provide your phone number and we will answer to all your questions.
        </p>
        <div class="relative w-full mx-auto md:mx-0 max-w-[365px] h-[40px] flex items-center mt-6 md:mt-9">
          <input class="w-full h-full outline-2 text-dark-blue pl-4 rounded-md" type='tel' pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required="required" placeholder="+38 (067) 00 00 000"/>
          <button class="absolute right-0 w-12 h-full flex items-center justify-center bg-yellow rounded-r">
            <p class="text-dark-blue">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
              </svg>
            </p>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
