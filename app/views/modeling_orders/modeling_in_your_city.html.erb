<div class="w-full max-w-screen-2xl mx-auto px-7 md:px-16 lg:px-24">
  <div class="flex flex-col screen-height mt-[68px] md:flex-row items-center justify-center md:justify-between">
    <div class="w-full md:w-3/6 order-2 md:order-1">
      <div class="mt-12 text-center md:text-left md:mt-0">
        <p class="text-base md:text-lg uppercase text-gray-100">
          <%= t("static_pages.home.services") %>
        </p>
        <h1 class="text-3xl lg:text-heading-1 text-dark-blue capitalize">
          <% if I18n.locale == :en %>
            <%= t("static_pages.home.3dmodeling") %>
            <br/>
            <%= @city.english_name %>
          <% else %>
            <%= t("static_pages.home.3dmodeling") %>
            <br/>
            <%= @city.ukrainian_name %>
          <% end %>
        </h1>
        <p class="w-full md:max-w-[472px] mt-6 md:mt-10 text-dark-blue">
          <%= t("static_pages.modeling.3dmodeling_description") %>
        </p>
        <a href="#scroll-to-order-modeling" data-controller="scroll-to"
          class="button w-full mx-auto md:mx-0 sm:w-64 mt-6">
          <%= t("static_pages.custom_buttons.order_modeling") %>
        </a>
      </div>
    </div>
    <div class="w-4/6 order-1 md:order-2 flex justify-end">
      <%= image_tag("print_img/arm_modeling.svg") %>
    </div>
  </div>

  <% if @modeling_portfolios.present? %>
    <div class="mt-20 md:mt-14 mb-20 md:mb-[154px] overflow-hidden">
      <div class="flex flex-col items-start sm:flex-row sm:items-end justify-between sm:mb-10 mb-6">
        <div>
          <p class="text-lg text-gray-100 font-medium uppercase">
            <%= t("static_pages.home.3dmodeling") %>
              <%= t("static_pages.home.portfolio") %>
          </p>
          <h2 class="text-3xl lg:text-heading-1 text-dark-blue">
            <%= t("static_pages.home.our_latest_projects") %>
          </h2>
        </div>
        <div class="hidden sm:flex gap-4 ">
          <div class="swiper-button-prev" style="color:#1f2937" tabindex="-1" aria-label="Previous sli" id="acc_btn"
            data-active="false" id="1" rols="swiper-wrapper-dec5216f065e46c3" aria-disabled="true">
            <div class="w-6 h-6 sm:w-12 sm:h-12 flex justify-center items-center rounded-full">
              <%= image_tag("icons_svg/arrow-thin-left.svg", class:"w-3 h-3 sm:w-6 sm:h-6 -ml-0.5 sm:-ml-1") %>
            </div>
          </div>
          <div class="swiper-button-next" style="color:#1f2937" tabindex="0" aria-label="Next slide" id="acc_btn"
            data-active="false" id="1" rols="swiper-wrapper-dec5216f065e46c3" aria-disabled="false">
            <div class="w-6 h-6 sm:w-12 sm:h-12 flex justify-center items-center rounded-full">
              <%= image_tag("icons_svg/arrow-thin-right.svg", class:"w-3 h-3 sm:w-6 sm:h-6 ml-0.5 sm:ml-1") %>
            </div>
          </div>
        </div>
      </div>
      <div data-controller="carousel" class="swiper-container">
        <div class="swiper-wrapper" data-controller="lightbox">
          <% @modeling_portfolios.order("RANDOM()").each do |portfolio| %>
            <%= render partial: "shared/portfolio" , locals: { portfolio: portfolio } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div id="scroll-to-order-modeling">
    <%= render partial: "shared/upload_form" , locals: { model: @modeling_order, order_name: "modeling", image_icon: "picture-and-pdf" } %>
    <%= turbo_frame_tag "modeling-modal" %>
  </div>
</div>
