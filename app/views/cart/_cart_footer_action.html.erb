<div id="footer_action" class="w-full px-4 md:px-8 pb-4 sm:pb-12 mt-4 absolute right-0 bottom-0 bg-white">
  <% if current_cart.cart_items.present? %>
    <div class="w-full h-px bg-light-grey my-3"></div>
    <div class="flex justify-between items-center text-sm text-gray-800 font-medium">
      <h5 class="text-dark-blue">
        <%= t("cart.cart_footer_action.summary") %>
      </h5>
      <p>â‚´
        <%= render partial: "cart/total_price" %></p>
    </div>
    <%= link_to checkout_path do %>
      <div class="w-full h-16 mt-5 button flex justify-center items-center rounded-lg text-base px-3 text-center sm:px-0 sm:text-xl font-medium">
        <%= t("cart.cart_footer_action.payment") %>
      </div>
    <% end %>
  <% else %>
    <%= link_to products_path, class: "w-full h-16 mt-5 button flex justify-center items-center rounded-lg text-base px-3 text-center sm:px-0 font-medium" do %>
      <%= t("cart.cart_footer_action.back_to_product") %>
    <% end %>
  <% end %>
</div>
