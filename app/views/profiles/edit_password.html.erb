<%= turbo_frame_tag "edit_password" do %>
  <h1 class="title">  <%= t("dredd.user_profile.personal_data") %> </h1>
  <%= form_with model: [@user], url: update_password_path do |f| %>
    <div class="mt-5">
      <%= f.label :password, t("devise.passwords.edit.label"), class:"text-sm" %>
      <div>
        <%= f.text_field :password, autofocus: true, autocomplete: "new-password" %>
        <%= inline_error_for(:password, @user) %>
      </div>
    </div>

    <div class="mt-5">
    <%= f.label :password_confirmation,  t("devise.passwords.edit.labelsecond"), class:"text-sm" %>
      <%= f.text_field :password_confirmation, autocomplete: "new-password" %>
      <%= inline_error_for(:password_confirmation, @user) %>
    </div>
    <div class="mt-5">
      <%= f.submit t("devise.passwords.edit.button"), class: "button w-full" %>
    </div>
    <div class="mt-5">
      <%= link_to t("dredd.user_profile.cancel"), profile_path, class: "button w-full" %>
    </div>
    <% end %>
<% end %>
