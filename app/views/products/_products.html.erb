<%- @products.each do |product| %>
  <%= link_to product_path(product.id) do %>
    <div class="bg-dark-blue h-56 md:h-72 relative rounded-3xl">
      <div class="w-full md:h-[196px] mx-auto">
        <% if product.main_picture.attached? %>
          <%= image_tag(product.main_picture) %> 
        <% end %>
			</div>
      <div class="px-5 py-5">
        <p class="text-gray-500">
          <%= product.product_category.name%>
        </p>
        <p class="text-white text-base font-medium clamp">
          <%= product.name %>
        </p>
        <p class="text-xl text-white pt-1">
          â‚´ <%= product.price.to_i %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
