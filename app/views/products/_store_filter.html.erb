<div class="pb-4">
	<h4 class="text-lg text-gray-800">
    Categories
  </h4>
	<div class="mt-3 ">
		<%= form_for(@one_category, url: products_path) do |f| %>
			<% @parents_product_categories.each do |category| %>
				<div class="mt-3 cursor-pointer">
					<div class="flex justify-between">
						<div class="flex items-center">
							<%= f.check_box :name, id: category.name %>
							<%= f.label category.name, class: "ml-3", for: category.name %>
						</div>
						<p>***</p>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
<hr />
<div class="pt-5 pb-3 text-gray-800">
	<a href="#">
		<button class="w-full py-2 bg-yellow-400 flex flex-center justify-center rounded hover:bg-yellow-500">Search</button>
	</a>
</div>