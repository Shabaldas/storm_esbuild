<div class="w-full my-2 mt-16">
  <%# TODO: REMOVE AFTER SHOW PAGE CREATED %>
  <div class="form-grid-single w-1/2">
    <div class="form-group">
      <%= @product.name %>
    </div>
    <div class="form-group">
      <%= @product.price %>
    </div>
    <%= form_with(url: cart_add_product_path) do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.number_field :quantity, value: 0, min: 1 %>
      <%= f.submit "Add to cart", class: "button w-80" %>
    <% end %>
  </div>
  
  <%= image_tag("partials_img/empty_busket.png", class: "mx-auto my-auto w-40 object-contain mb-4") %>
  <div class="flex justify-around">
    <span class="text-heading-4">
      No information about product at the moment
    </span>
  </div>
</div>