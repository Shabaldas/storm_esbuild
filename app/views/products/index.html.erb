<div class="w-full max-w-screen-2xl mx-auto mt-24 px-7 lg:px-24">
  <div class="w-full mx-auto flex justify-between">
    <div class="w-80 hidden h-full max-h-min bg-white lg:rounded-lg py-4 px-7 text-zinc-500 lg:block">
      <%= render "products/store_filter" %>
    </div>
    <div class="w-full lg:w-9/12 mt-4 lg:mt-0">
      <% if @products.any? %>
        <%= turbo_frame_tag "products_list", src: products_url(format: :turbo_stream, page: params[:page]), loading: "lazy" do %>
          <div id="products_placeholder">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:ml-10 pb-16">
              <% 12.times do %>
                <%= render "product_placeholder" %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= turbo_frame_tag "products_pagination" %>
      <% else %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:ml-10 pb-16">
          <div></div>
          <div class="w-full my-2">
            <%= image_tag("partials_img/empty_busket.png", class: "mx-auto my-auto object-contain mb-4") %>
            <div class="flex justify-around">
              <span class="text-heading-4">
                No products at the moment
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
