<header class="w-full h-16 fixed z-30 bg-light-grey">
  <div class="w-full max-w-screen-2xl mx-auto flex justify-between items-center px-7 lg:px-[100px]">
    <div class="flex w-1/2 justify-between">
      <div class="w-24">
        <%= link_to root_path do %>
          <%= image_tag("partials_img/logo.png") %>
        <% end %>
      </div>
      <nav class="w-2/3 hidden lg:block text-gray-800 font-medium">
        <ul class="h-full flex flex-col lg:flex-row flex-initial justify-between items-center text-center tracking-wide">
          <li class="px-4">
            <%= active_link_to t('global.header.head'), root_path, class: "text-black cursor-pointer", active: :exact %>
          </li>
          <% if policy(:admin).access? %>
            <li class="px-4">
              <%= active_link_to t('global.header.printing'), printing_path, class: "text-black cursor-pointer" %>
            </li>
            <li class="px-4">
              <%= active_link_to t('global.header.store'), products_path, class: "text-black cursor-pointer" %>
            </li>
            <li class="px-4 cursor-pointer">
              <%= active_link_to t('global.header.calculator'), calculator_path, class: "text-black cursor-pointer" %>
            </li>
          <% end %>
          <li class="px-4 cursor-pointer"></li>
        </ul>
      </nav>
    </div>
    <div class="flex items-center space-x-5">
      <%# if policy(:admin).access? %>
      <div class="w-20 flex justify-between items-center">
        <div class="relative w-7 h-7 flex items-center lg:block" data-controller="dropdown">
          <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="select-none">
            <%= image_tag("partials_img/user.png") %>
          </div>
          <div data-dropdown-target="menu" class="absolute top-10 left-[50%] -translate-x-[50%] hidden">
            <div class="w-[186px] shadow rounded border overflow-hidden flex flex-col items-center text-base text-gray-900 bg-white">
              <% if user_signed_in? %>
                <p class="text-center px-5 pt-2 pb-1 cursor-pointer">
                  <%= link_to t('global.header.my_cabinet'), edit_user_registration_path, class: "text-black" %>
                </p>
                <hr/>
                <div class="text-center cursor-pointer pt-2 pb-1">
                  <%= button_to t('global.header.log_out'), destroy_user_session_path, method: :delete, data: { trubo: false } %>
                </div>
              <% else %>
                <p class="text-center cursor-pointer pt-2 pb-1">
                  <%= link_to t('global.header.registration'), new_user_registration_path, class: "text-black" %>
                </p>
                <hr/>
                <div class="text-center px-5 pt-2 pb-1 cursor-pointer">
                  <p class="text-center cursor-pointer" data-controller="renderer">
                    <%= link_to t('global.header.sign_in'), user_session_path, data: { remote: true, action: 'ajax:success->renderer#render' }, class: "text-black" %>
                    <span data-target="renderer.display"></span>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <% I18n.available_locales.reject { |locale| current_locale?(locale) }.each do |locale| %>
          <div class="h-[28px]">
            <%= button_to locale_path(locale), method: :put, data: { turbo: false } do %>
              <span class="appearance-none flex items-center text-gray-700">
                <%= image_tag("partials_img/#{current_locale_icon(locale)}.png", class: "w-7") %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>

      <%# end %>
      <% if policy(:admin).access? %>
        <details class="drawer-wrapper">
          <summary class="drawer-trigger flex relative">
            <%= image_tag("partials_img/basket_icon_grey.png", class: "mt-0") %>
            <span class="w-[18px] h-[18px] absolute -top-2.5 left-3 flex justify-center items-center bg-yellow-500 rounded-full text-[10px] text-dark-blue font-semibold">
              12
            </span>
          </summary>
          <%= render partial: "cart/side_bar_cart" %>
        </details>
      <% end %>
    </div>
  </div>
</header>
