<div class="w-full max-w-[1029px] mx-auto bg-white py-6 px-6 md:px-8 rounded-[20px] flex flex-col lg:flex-row items-center justify-between mb-20 md:mb-[154px]">
  <div class="w-full lg:w-1/2 order-2 lg:order-1 mt-6 lg:mt-0">
    <div class="flex items-center">
      <%= image_tag("icons_svg/settings.svg", class:'mr-1.5') %>
      <span class="text-dark-grey font-semibold">
        Замовити 3D моделювання
      </span>
    </div>
    <div class="w-full flex flex-col">
      <div class="mt-7 w-full sm:max-w-[470px]">
        <label for="firstName" class="text-sm text-metalic-grey">
          Ім’я
        </label>
        <input id="firstName" placeholder="Type your name"/>
      </div>
      <div class="mt-7 w-full sm:max-w-[470px]">
        <label for="phoneNumber" class="text-sm  text-metalic-grey">
          Номер телефону
        </label>
        <input id="phoneNumber" placeholder="+49-89-636-48018"/>
      </div>
      <div class="mt-7 w-full sm:max-w-[470px]">
        <label for="email" class="text-sm  text-metalic-grey">
          Email
        </label>
        <input id="email" placeholder="Leave your email"/>
      </div>
      <div class="mt-7 w-full sm:max-w-[470px]">
        <label for="comment" class="text-sm  text-metalic-grey">
          Коментар
        </label>
        <textarea class="w-full h-24" id="comment" placeholder="Напишіть додаткові побажання до замовлення"></textarea>
      </div>
      <button class="button w-full mx-auto sm:mx-0 sm:w-56 mt-8">
        Замовити 3Д друк
      </button>
    </div>
  </div>
  <div class="w-full h-[300px] sm:h-[504px] lg:w-1/2 ml-0 lg:ml-6 flex items-center justify-center bg-light-grey rounded-[20px] border-2 border-dashed border-zinc order-1 lg:order-2">
    <div>
      <%= image_tag("icons_svg/picture-and-pdf.svg", class:"w-1/3 sm:w-32 mx-auto") %>
      <p class="text-metalic-grey text-center mt-4 mx-auto px-3">
        Drop PDF,JPEG or
        <label class="text-base text-blue-300 cursor-pointer relative">
          Choose file
          <input class="w-0 h-0 opacity-0 absolute left-0" type="file"/>
        </label>
        to upload
      </p>
    </div>
  </div>
</div>