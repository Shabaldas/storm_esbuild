<div data-controller="modals" id="modal">
  <div data-modal-target="modals" class="animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center" style="z-index: 9999;">
    <div data-controller="modals" style="background-color: rgba(0, 0, 0, 0.8)" class="absolute top-0 left-0 w-full min-h-screen"></div>
    <div class="w-10/12 md:w-[420px] h-fit rounded-2xl px-4 md:px-6 py-6 md:py-6 bg-white flex flex-col items-center
      justify-between relative z-50 border-[1px] border-zinc-200 md:border-none">
      <%= link_to "#", data: { action: "modals#close" }, class: "w-3 h-3 absolute top-6 right-6 cursor-pointer" do %>
        <%= image_tag("partials_img/delete.png", alt: "delete-icon") %>
      <% end %>
      <div class="w-1/3 flex justify-center">
        <%= image_tag("partials_img/success.png", alt: "success-icon") %>
      </div>
      <p class="text-center text-base text-gray-400 pb-4">
        <%= t("static_pages.feedback_call.call_later") %>
      </p>
      <div>
        <%= link_to t("static_pages.feedback_call.ok"), "#", data: { action: "modals#close" }, class: "button w-80" %>
      </div>
    </div>
  </div>
</div>
