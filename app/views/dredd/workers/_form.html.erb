
<%= simple_form_for [:dredd, @worker], html: { class: "" } do |form| %>
  <div class="form-grid-single w-1/2">
    <div class="flex space-x-4">
      <div class="form-group">
        <%= form.label t("dredd.workers.first_name"), class: "form-label" %>
        <%= form.text_field :first_name, placeholder: t("dredd.manual_orders.please_input") %>
        <%= inline_error_for(:first_name, @worker) %>
      </div>
      <div class="form-group">
        <%= form.label t("dredd.workers.last_name"), class: "form-label" %>
        <%= form.text_field :last_name, placeholder: t("dredd.manual_orders.please_input") %>
        <%= inline_error_for(:last_name, @worker) %>
      </div>
      <div class="form-group">
        <%= form.label t("dredd.workers.nickname"), class: "form-label" %>
        <%= form.text_field :nickname, placeholder: t("dredd.manual_orders.please_input") %>
        <%= inline_error_for(:nickname, @worker) %>
      </div>
    </div>
    <div class="form-group">
      <%= form.submit t("dredd.manual_orders.save"), class: "button w-full md:max-w-[212px]" %>
    </div>
  </div>

  <%= link_to "Cancel", dredd_workers_path, class: "button md:max-w-[212px]" %>
<% end %>
