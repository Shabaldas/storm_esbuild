z<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="form-group">
    <%= f.label t("dredd.products.price"), class: "form-label" %>
    <%= f.text_field :price %>
    <%= f.select :option_value_id,
                 color_option_value_for_select,
                 { class: "", include_blank: true },
                 { multiple: false, data: { controller: "select" }}

    %>
  </div>

  <button type="button" data-action="nested-form#remove"><%= t("dredd.products.remove_color") %></button>
  <%= f.hidden_field :_destroy%>
</div>
