<div class="list-item-wrapper mb-4">
  <div class="list-item-content">
    <div class="list-item-header">
      <div class="list-item-title">
        <% accounting_date, earning, cost, reward = accounting %>
        <% month, year = accounting_date.split('/') %>
        <%= link_to "#{I18n.t('dredd.month_names')[month.to_i]} #{year}", monthly_dredd_accountings_path(date: accounting_date), class: 'mr-4 text-black' %>
      </div>
      <div class="list-item-status space-x-5">
        <%= link_to monthly_dredd_accountings_path(date: accounting_date), class: 'mr-4 text-black' do %>
          <span class="payout">
          <%= t('dredd.accountings.monthly.profit') %>: UAH <%= profit(earning, cost, reward)  %>
          </span>
          <span class="payout">
          <%= t('dredd.accountings.monthly.earning_label') %>: UAH <%= earning %>
          </span>
          <span class="payout">
            <%= t('dredd.accountings.costs') %>: UAH <%= cost %>
          </span>
          <span class="payout">
            <%= t('dredd.accountings.rewards') %>: UAH <%= reward %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
