<div class="list-item-wrapper bill-item">  
  <div class="list-item-content">
    <div class="list-item-header">
      <div class="list-item-title">
        <% accounting_date, earning = accounting %> 
        <% month, year = accounting_date.split('/') %>
        
        <%= link_to "#{Date::ABBR_MONTHNAMES[month.to_i]} #{year}", monthly_dredd_accountings_path(date: accounting_date), class: 'mr-4' %>
        <span class="label font-bold">
          <%= t('workers.rewards.index.created', date: "#{Date::ABBR_MONTHNAMES[month.to_i]} #{year}") %>
        </span>
      </div>

      <div class="list-item-status">
        <span class="payout">
          <%#= t('workers.rewards.index.time', time: get_duration_hrs_and_mins(gig_time_activity_duration)) %>
          <%#= t('workers.rewards.index.bonus', bonus: "#{Money.from_cents(epam_bonus_amount, 'EUR').format(format: '%u %n')}") %>
        </span>
      </div>
    </div>
  </div>
</div>