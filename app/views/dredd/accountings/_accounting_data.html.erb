<div class="list-item-wrapper mb-4">  
  <div class="list-item-content">
    <div class="list-item-header">
      <div class="list-item-title">
        <% accounting_date, earning = accounting %> 
        <% month, year = accounting_date.split('/') %>
        <%= link_to "#{Date::ABBR_MONTHNAMES[month.to_i]} #{year}", monthly_dredd_accountings_path(date: accounting_date), class: 'mr-4 text-black' %>
      </div>

      <div class="list-item-status">
        <span class="payout">
          UAH <%= earning %>
        </span>
      </div>
    </div>
  </div>
</div>