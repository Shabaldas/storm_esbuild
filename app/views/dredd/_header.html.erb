<header class="w-full h-16 fixed z-30 bg-light-grey">
 <div class="flex items-center justify-between mx-auto px-7 w-full">
    <div class="flex w-1/2 justify-between">
      <span class="text-2xl">Admin Dashboard</span>
      <div class="w-24">
        <%= link_to dredd_dashboard_path do %>
          <%= image_tag("partials_img/logo.png") %>
        <% end %>
      </div>
      <nav class="w-2/3 hidden lg:block text-gray-800 font-medium">
        <ul class="h-full flex flex-col lg:flex-row flex-initial justify-between items-center text-center tracking-wide">
          <%= active_link_to "Products", dredd_products_path, class: "text-black cursor-pointer pl-5" %>
          <%= active_link_to "Product Categories", dredd_product_categories_path, class: "text-black cursor-pointer" %>
          <%= active_link_to "Feedback Calls", dredd_feedback_calls_path, class: "text-black cursor-pointer" %>
          <%= active_link_to "Orders", dredd_orders_path, class: "text-black cursor-pointer" %>
        </ul>
      </nav>
    </div>
  </div>
</header>
