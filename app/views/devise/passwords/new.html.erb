<div class="w-full max-w-screen-2xl mx-auto px-7 md:px-24 mt-9 text-grey-800">
  <div class="mt-9">
    <div class="text-2xl font-medium">
      <h2>Forgot your password?</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="w-full md:max-w-[436px] mt-8">
        <div class="flex flex-col md:flex-row lg:justify-between items-center">
          <div class="w-full">
            <div class="mt-1">
              <%= f.label :email, class:"text-sm" %>
            </div>
            <div class="mt-1">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"marko_pazuniak@gmail.com" %>
            </div>
          </div>
        </div>
        <div class="actions mt-[32px] mb-4">
          <%= f.submit "Reset password" , data: { turbo: false }, class:"button w-full md:max-w-[212px]" %>
        </div>
        <div class="content-divider"></div>
      </div>
    <% end %>
    <div class="flex items-center [&>*:nth-child(odd)]:mr-8">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
