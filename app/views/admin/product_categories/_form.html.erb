<%= render partial: "errors", locals: { product_category: @product_category } %>
<%= form_with model: [:admin, @product_category], url: admin_product_categories_path, class: "form-grid-single" do |form| %>
  <div class="form-grid-single w-1/2">
    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, placeholder: "Please input" %>
    </div>
    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, placeholder: "Please input", class: "w-full form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Create Product Category", class: "button w-full md:max-w-[212px]" %>
    </div>
  </div>
<% end %>
