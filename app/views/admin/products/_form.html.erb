<%= render partial: "errors", locals: { product: @product } %>
<%= form_with model: [:admin, @product], url: admin_products_path, class: "form-grid-single" do |form| %>
  <div class="form-grid-single w-1/2">
    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, placeholder: "Please input" %>
    </div>
    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, placeholder: "Please input", class: "w-full form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :product_category, as: "Product Category", class: "form-label"  %>
      <%= form.select :product_category_id,
                      product_categories_for_select,
                      { class: "", include_blank: false },
                      { multiple: false, data: { controller: "select" }}
      %>
    </div>

    <div class="form-group form-toggle">
      <%= form.label :status, as: "Status", class: "toggle-switch-label" %>
      <label class="toggle-switch ml-3">
        <%= form.check_box(:status, { class: "ml-3", type: "checkbox" }, "active", "inactive") %>
        <span class="slider"></span>
      </label>
    </div>
    <%= form.label :main_picture %>
    <div data-controller="dropzone" class="form-group dropzone">
      <%= form.file_field :main_picture,  multiple: false, direct_upload: true, data: { dropzone_target: 'input' }, class: "hidden" %>
    </div>
    <div class="form-group">
      <%= form.submit "Create Product", class: "button w-full md:max-w-[212px]" %>
    </div>
  </div>
<% end %>
